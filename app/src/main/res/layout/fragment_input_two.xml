<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/bgHeader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewInput2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <ToggleButton
                    android:id="@+id/toggleBtnInput2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_toggle"
                    android:paddingTop="25sp"
                    android:text="@string/lock"
                    android:textOff=""
                    android:textOn=""
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tvAccessInput2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="30dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewInput2"
            android:layout_alignStart="@+id/cardViewInput2"
            android:layout_alignEnd="@+id/cardViewInput2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="35dp"
            android:elevation="10dp">

            <Button
                android:id="@+id/btnAccessInput2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ui"
                android:text="@string/access_request"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardViewInput2"
            android:layout_alignEnd="@+id/cardViewInput2"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="-20dp"
            android:elevation="10dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_ui"
                android:src="@drawable/ic_lock"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>